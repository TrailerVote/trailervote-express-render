{
  "include": ["src"],
  "exclude": ["node_modules", "tests"],
  "compilerOptions": {
    "resolveJsonModule": true,

    /* Basic Options */
    "target": "es2016",
    "module": "es2015",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
